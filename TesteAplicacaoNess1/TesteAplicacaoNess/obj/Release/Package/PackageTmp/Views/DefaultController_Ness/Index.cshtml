@model TesteAplicacaoNess.Models.Usuario

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(source: Model, canPage: true, defaultSort: "User_Id", rowsPerPage: 5, canSort: true);
}
<br />
<p>
    @Html.ActionLink("Novo Usuario", "AdicionarUsuario", null, new { @class = "btn btn-primary" })
</p>
@grid.GetHtml(
tableStyle: "webGrid",
htmlAttributes: new { id = "checkableGrid" },
fillEmptyRows: true,
alternatingRowStyle: "alt",
headerStyle: "grid-header",
footerStyle: "foot-grid",
mode: WebGridPagerModes.All,
firstText: "<< Primeiro",
previousText: " < Anterior",
nextText: "Próximo >",
lastText: "Último >>",
caption: "Detalhes do Usuário",
emptyRowCellValue: null,
columns: new[]{
    grid.Column("usuarioId",header:"ID",style:"text-align-left"),
    grid.Column("usuarioNome",header:"Nome"),
    grid.Column("usuarioCpf",header:"CPF"),
    grid.Column("usuarioTelefone",header:"Telefone"),
    grid.Column("",header: "Ações",format: @<text>@Html.ActionLink("Editar", "AtualizaUsuario", new { id = item.usuarioId })
    |
    @Html.ActionLink("Deletar", "DeletaUsuarioPorID", new { id = item.usuarioId })
    |
    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.usuarioId })
    </text>
        )
                 }
                )

